<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     xmlns:app="http://schemas.android.com/apk/res-auto"
   >


    <RelativeLayout
        android:id="@+id/top_relative_login"
        android:layout_width="match_parent"
        android:background="#106184"
        android:layout_height="50.0dip" >



        <TextView
            android:id="@+id/titleText_login"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:text="安全定位"
            android:textColor="#EDEDED"
            android:textSize="15dp" />
    </RelativeLayout>

    <f_app.dmx.com.securelocate.CoordinatesView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fontSize="30sp"
        android:layout_below="@+id/top_relative_login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_above="@+id/main_bottom" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/main_bottom"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/img_tab_now"
            android:scaleType="matrix"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="2dp"
            android:layout_alignParentTop="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_weight="1">
                <ImageView
                    android:onClick="Click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_map"
                    android:scaleType="matrix"
                    android:clickable="true"
                    android:src="@drawable/saferoute"/>
                <TextView
                    android:onClick="Click"
                    android:id="@+id/tv_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="安全路线"
                    android:textSize="12sp"
                    android:textColor="#000000"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_weight="1">
                <ImageView
                    android:onClick="Click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_location"
                    android:scaleType="matrix"
                    android:clickable="true"
                    android:src="@drawable/location_home"/>
                <TextView
                    android:id="@+id/tv_alarm"
                    android:onClick="Click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="安全定位"
                    android:textSize="12sp"
                    android:textColor="#000000"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_weight="1">
                <ImageView
                    android:onClick="Click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_humiture"
                    android:scaleType="matrix"
                    android:clickable="true"
                    android:src="@drawable/watchmore"/>
                <TextView
                    android:onClick="Click"
                    android:id="@+id/tv_humiture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="温湿度监控"
                    android:textSize="12sp"
                    android:textColor="#000000"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_weight="1">
                <ImageView
                    android:onClick="Click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_setting"
                    android:scaleType="matrix"
                    android:clickable="true"
                    android:src="@drawable/home_setting"/>
                <TextView
                    android:onClick="Click"
                    android:id="@+id/tv_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的设置"
                    android:textSize="12sp"
                    android:textColor="#000000"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>

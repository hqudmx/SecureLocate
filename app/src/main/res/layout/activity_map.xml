<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/map_li"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#106184">
        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3">
        </Spinner>
        <AutoCompleteTextView
            android:id="@+id/id_search"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="4"/>
        <Button
            android:id="@+id/bt_search"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:text="搜索"/>
    </LinearLayout>
    <com.amap.api.maps.MapView
        android:layout_below="@+id/map_li"
        android:id="@+id/map"
        android:layout_above="@+id/main_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </com.amap.api.maps.MapView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/main_bottom"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/img_tab_now"
            android:scaleType="matrix"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="2dp"
            android:layout_alignParentTop="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_weight="1">
                <ImageView
                    android:onClick="Click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_map"
                    android:scaleType="matrix"
                    android:clickable="true"
                    android:src="@drawable/saferoute"/>
                <TextView
                    android:onClick="Click"
                    android:id="@+id/tv_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="安全路线"
                    android:textSize="12sp"
                    android:textColor="#000000"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_weight="1">
                <ImageView
                    android:onClick="Click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_location"
                    android:scaleType="matrix"
                    android:clickable="true"
                    android:src="@drawable/location_home"/>
                <TextView
                    android:onClick="Click"
                    android:id="@+id/tv_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="安全定位"
                    android:textSize="12sp"
                    android:textColor="#000000"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_weight="1">
                <ImageView
                    android:onClick="Click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_humiture"
                    android:scaleType="matrix"
                    android:clickable="true"
                    android:src="@drawable/watchmore"/>
                <TextView
                    android:onClick="Click"
                    android:id="@+id/tv_humiture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="温湿度监控"
                    android:textSize="12sp"
                    android:textColor="#000000"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_weight="1">
                <ImageView
                    android:onClick="Click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_setting"
                    android:scaleType="matrix"
                    android:clickable="true"
                    android:src="@drawable/home_setting"/>
                <TextView
                    android:onClick="Click"
                    android:id="@+id/tv_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的设置"
                    android:textSize="12sp"
                    android:textColor="#000000"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>

